{
    "version": "1.0",
    "description": "Template-aware validation configuration",
    "default_template": {
        "name": "GHX Standard Template v2.0",
        "mandatory_fields": [
            "Artikelnummer",
            "Artikelnaam", 
            "Brutoprijs",
            "Nettoprijs",
            "Is BestelbareEenheid",
            "Is BasisEenheid",
            "Omschrijving Verpakkingseenheid",
            "UOM Code Verpakkingseenheid",
            "Inhoud Verpakkingseenheid",
            "UOM Code Basiseenheid",
            "Inhoud Basiseenheid",
            "UOM Code Inhoud Basiseenheid",
            "Omrekenfactor",
            "GHX BTW Code",
            "UNSPSC Code",
            "Startdatum Prijs Artikel",
            "Einddatum Prijs Artikel"
        ],
        "visible_fields": "all",
        "excluded_from_stats": [],
        "total_expected_fields": 102,
        "notes": "Default template - alle velden zichtbaar, 17 verplichte velden"
    },
    "template_generator": {
        "detection": {
            "stamp_sheet": "_GHX_META",
            "stamp_range": "GHX_STAMP",
            "fallback_to_default": true
        },
        "collapsed_fields_by_context": {
            "gs1_mode_none": [
                "GTIN", "GLN Fabrikant", "GLN Leverancier", "Doelmarkt Landcode",
                "GS1 Synchronisatie Status", "GDSN Publication Status"
            ],
            "non_staffel": [
                "Hoeveelheid Van", "Hoeveelheid Tot"
            ],
            "non_medisch": [
                "GMDN Code", "EMDN Code", "MDR Klasse"
            ],
            "non_lab": [
                "Chemische Samenstelling", "Gevaarlijke Stoffen Klasse"
            ]
        },
        "institution_mandatory_fields": {
            "Leiden": ["Levertijd", "Duurzaamheid Score", "CO2 Footprint"],
            "UU": ["Levertijd", "Milieu Impact Score"],
            "AMC": ["Levertijd", "Circulaire Economie Score"],
            "Erasmus": ["Sociale Impact Score"],
            "Maastricht": ["Levertijd", "Regionale Inkoop Score"],
            "Groningen": ["Levertijd", "Noordelijke Samenwerking Score"]
        },
        "product_type_rules": {
            "facilitair": {
                "description": "Facilitaire producten - basis template",
                "excluded_fields": ["GMDN Code", "EMDN Code", "MDR Klasse"]
            },
            "medisch": {
                "description": "Medische producten - met medische codes",
                "extra_mandatory": ["GMDN Code"],
                "excluded_fields": []
            },
            "lab": {
                "description": "Lab producten - met chemische informatie", 
                "extra_mandatory": ["Chemische Samenstelling"],
                "excluded_fields": []
            }
        },
        "context_rules": {
            "gs1": {
                "mandatory_fields": ["Artikelnummer", "GTIN", "GLN Fabrikant"],
                "excluded_fields": ["EMDN Code", "GMDN Code"],
                "excluded_from_stats": ["EMDN Code", "GMDN Code"]
            },
            "medisch": {
                "mandatory_fields": ["Artikelnummer", "GMDN Code", "EMDN Code"],
                "excluded_fields": ["GTIN"],
                "excluded_from_stats": ["GTIN"]
            }
        },
        "notes": "Template Generator context rules - dynamic field visibility and mandatory status"
    }
}
